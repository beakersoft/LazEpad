void setup() {
  pinMode (LOCKWINDOWS, INPUT_PULLUP);
  Serial.begin(9600);
  display.begin(SSD1306_SWITCHCAPVCC, 0x3C);
  display.display();
  delay(100);
  display.clearDisplay();
  
  display.setTextColor(WHITE);

  Keyboard.begin();

  display.setTextSize(2);
  display.setCursor(20, 0);
  display.println("LazEpad");
  display.setCursor(0, 23);
  display.setTextSize(1);
  display.println("ZZZZzzzz....");  
  display.display();
}

void loop() {
  // read the pushbutton:
  int buttonState = digitalRead(LOCKWINDOWS);
  // if the button state has changed,
  if ((buttonState != previousLockWindowsState)
      // and it's currently pressed:
      && (buttonState == HIGH)) {
    // increment the button counter
    counter++;

    //ok lets actually send the keys
    Keyboard.press(WindowsKey);
    Keyboard.press('l');
    delay(100);
    Keyboard.releaseAll();

    //loop this a few times so it animates the cat 
    for (int i = 0; i <= 20; i++) {
      drawBongo1();
      delay(150);
      drawBongo2(); 
    }
    
    displayLastButtonAndCount("Lock Windows");     
    //maybe go back to the default screen after a few seconds  
    
  }
  
  // save the current button state for comparison next time:
  previousLockWindowsState = buttonState;
  
}

void drawBongo1() {
  display.clearDisplay();
  display.drawBitmap(
    (display.width()  -  SCREEN_WIDTH) / 2,
    (display.height() - SCREEN_HEIGHT) / 2,
    bongoCat1, SCREEN_WIDTH, SCREEN_HEIGHT, 1);
  display.display();  
}

void drawBongo2() {
  display.clearDisplay();
