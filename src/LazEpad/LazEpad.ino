    (display.width()  -  SCREEN_WIDTH) / 2,
    (display.height() - SCREEN_HEIGHT) / 2,
    bongoCat2, SCREEN_WIDTH, SCREEN_HEIGHT, 1);
  display.display();  
}

void displayLastButtonAndCount(String buttonName){    
    display.clearDisplay();
    display.setTextSize(1);
    display.setCursor(0, 0);
    display.println("Last: " + buttonName);
    display.println("Count " + String(counter));    
    display.display();
}
